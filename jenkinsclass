#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo "This is building stage...."
                }
            }
        }
        stage('test') {
            parallel {
                stage ('Test on Linux') {
                    steps {
                        script {
                            echo "This is testing stage...."
                            }
                        }
                
                  }

            }
            
        }
        stage('deploy') {
            steps {
                script {
                    echo "This is deploying stage..."
                }
            }
        }
    
    }
}
