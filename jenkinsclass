#!/usr/bin/env groovy

pipeline {
    agent {label 'my-linux-node'}
    stages {
        stage ('Checkout') {
            steps {
                echo 'Checking out the sourcr code...'
                git 'https://github.com/waseemuddin/java-maven-project.git'
            }
        }
        stage('Build') {
            steps {
                script {
                    echo "Building the code ..."
                }
            }
        }
    }
}

