#!/usr/bin/env groovy

pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    echo "building the application...."
                }
            }
        }
        stage('Test') {
            parallel {
                stage('Test on Linux') {
                    steps {
                        script {
                            echo "Testing on Linux"

                        }
                    }
                }
                stage('Test on Windows'){
                    steps {
                        script {
                            echo "Testing on Windows"
                        }
                    }
                }
            }
        }
        
    }
}

