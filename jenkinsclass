#!/usr/bin/env groovy

pipeline {
    agent {label 'my-linux-node'}

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Checking out the source code...'
                    git 'https://github.com/example/repo.git'
                }
            }
        }
        stage('Build') {
            steps {
                script {
                    echo "Building the code..."
                }
            }
        }
    }
}


