#!/usr/bin/env groovy

def gv

pipeline {
    agent any
    tools {
        maven 'maven-3.9'
    }
    stages {
        stage("init groovy") {
            steps {
                script {
                    gv = load "script.groovy" 
                }
            }
        }
        stage("build jar") {
            steps {
                script {
                    gv.buildJar()
                }
            }
        }
        stage("build image"){
            steps {
                script {
                    gv.buildImage()
                }
            }
        }
        stage('deploy app') {
            steps {
                script {
                    gv.deployApp()
                }
            }
        }
    }
}


