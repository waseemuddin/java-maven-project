    stages{
        stage('build') {
            steps {
                script{
                    echo "This is building the app...."
                }
            }
        }
        stage('test') {
            steps {
                script {
                    echo "This is testing the app....."
                }
            }
        }
        stage('deply') {
            steps {
                script {
                    echo "This is deplying the app....."
                }
            }
        }
    }

}
